{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 120,
        "severity": "warning"
      },
      "max-comma": {
        "max": 3,
        "severity": "warning"
      },
      "max-ten": {
        "max": 3,
        "severity": "warning"
      },
      "max-kanji-continuous-len": {
        "max": 15
      },
      "arabic-kanji-numbers": true,
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "ですます",
        "preferInList": "である",
        "strict": false
      },
      "ja-no-mixed-period": {
        "periodMark": "。",
        "severity": "warning"
      },
      "no-double-negative-ja": true,
      "no-dropping-the-ra": true,
      "no-doubled-conjunctive-particle-ga": {
        "severity": "warning"
      },
      "no-doubled-conjunction": true,
      "no-doubled-joshi": {
        "min_interval": 1,
        "severity": "warning"
      },
      "no-nfd": true,
      "no-invalid-control-character": false,
      "no-exclamation-question-mark": false,
      "no-hankaku-kana": true,
      "ja-no-weak-phrase": {
        "severity": "warning"
      },
      "ja-no-successive-word": false,
      "ja-no-abusage": true,
      "ja-no-redundant-expression": {
        "severity": "warning"
      },
      "ja-unnatural-alphabet": {
        "allow": [
          "/[A-Z]/"
        ],
        "allowCommonCase": true
      },
      "no-unmatched-pair": true
    },
    "preset-jtf-style": {
      "1.1.1.本文": { "severity": "warning" },
      "1.1.2.見出し": { "severity": "warning" },
      "1.1.3.箇条書き": { "severity": "warning" },
      "1.1.5.図表のキャプション": { "severity": "warning" },
      "1.2.1.句点(。)と読点(、)": { "severity": "warning" },
      "1.2.2.ピリオド(.)とカンマ(,)": { "severity": "warning" },
      "2.1.2.漢字": { "severity": "warning", "enabled": false },
      "2.1.5.カタカナ": { "severity": "warning", "enabled": false },
      "2.1.6.カタカナの長音": { "severity": "warning", "enabled": false },
      "2.1.8.算用数字": { "severity": "warning" },
      "2.1.9.アルファベット": { "severity": "warning" },
      "2.1.10.算用数字の位取りの表記": { "severity": "warning" },
      "2.2.1.ひらがなと漢字の使い分け": { "severity": "warning", "enabled": false },
      "2.2.2.算用数字と漢数字の使い分け": { "severity": "warning" },
      "2.2.3.一部の助数詞の表記": { "severity": "warning" },
      "3.1.1.全角文字と半角文字の間": { "severity": "warning", "enabled": false },
      "3.1.2.全角文字どうし": { "severity": "warning", "enabled": false },
      "3.2.カタカナ語間のスペースの有無": { "severity": "warning" },
      "3.3.かっこ類と隣接する文字の間のスペースの有無": { "severity": "warning" },
      "4.1.1.句点(。)": { "severity": "warning" },
      "4.1.3.ピリオド(.)、カンマ(,)": { "severity": "warning" },
      "4.2.1.感嘆符(！)": { "severity": "warning" },
      "4.2.2.疑問符(？)": { "severity": "warning" },
      "4.2.4.中黒(・)": { "severity": "warning" },
      "4.2.5.波線(〜)": { "severity": "warning" },
      "4.2.6.ハイフン(-)": { "severity": "warning" },
      "4.2.7.コロン(:)": { "severity": "warning" },
      "4.2.8.セミコロン(;)": { "severity": "warning" },
      "4.2.9.ダッシュ(-)": { "severity": "warning" },
      "4.3.1.丸かっこ（）": { "severity": "warning" },
      "4.3.2.大かっこ[]": { "severity": "warning" },
      "4.3.3.かぎかっこ「」": { "severity": "warning" },
      "4.3.4.二重かぎかっこ『』": { "severity": "warning" },
      "4.3.5.二重引用符": { "severity": "warning" },
      "4.3.6.中かっこ{ }": { "severity": "warning" },
      "4.3.7.山かっこ<>": { "severity": "warning" },
      "4.3.8.一重引用符": { "severity": "warning" }
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      },
      "ja-space-around-code": false,
      "ja-no-space-between-full-width": true,
      "ja-nakaguro-or-halfwidth-space-between-katakana": true,
      "ja-no-space-around-parentheses": true,
      "ja-space-after-exclamation": false,
      "ja-space-after-question": false
    },
    "spellcheck-tech-word": { "severity": "warning" },
    "period-in-list-item": {
      "periodMark": "",
      "periodMarks": [
        ".",
        "。",
        "．"
      ],
      "ignoreLinkEnd": true,
      "allowPeriodMarks": [],
      "allowEmoji": false,
      "forceAppendPeriod": false,
      "severity": "warning"
    },
    "ja-hiragana-keishikimeishi": { "severity": "warning" },
    "ja-hiragana-fukushi": { "severity": "warning" },
    "ja-hiragana-hojodoushi": { "severity": "warning" },
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": { "severity": "warning" },
    "prefer-tari-tari": false,
    "abbr-within-parentheses": { "severity": "warning" },
    "no-mixed-zenkaku-and-hankaku-alphabet": { "severity": "warning" },
    "footnote-order": { "severity": "warning" }
  },
  "filters": {
    "allowlist": {
      "allow": []
    }
  }
}